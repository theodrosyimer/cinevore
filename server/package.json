{
  "name": "server",
  "version": "0.1.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "node --unhandled-rejections=strict dist/server.js",
    "dev": "tsx watch ./server.ts",
    "introspect": "drizzle-kit introspect:mysql --config=drizzle.config.ts",
    "generate": "drizzle-kit generate:mysql --config=drizzle.config.ts",
    "migrate": "tsx core/services/migrate.ts",
    "push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "drop": "drizzle-kit drop --config=drizzle.config.ts",
    "up": "drizzle-kit up:mysql --config=drizzle.config.ts",
    "check": "drizzle-kit check:mysql --config=drizzle.config.ts",
    "studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "eslintConfig": {
    "root": true
  },
  "keywords": [],
  "author": "Theodros Yimer",
  "license": "MIT",
  "dependencies": {
    "@t3-oss/env-core": "^0.6.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "dotenv-vault-core": "^0.7.0",
    "drizzle-orm": "^0.27.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "1.4.5-lts.1",
    "mysql2": "^3.5.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.0",
    "concurrently": "^8.2.0",
    "drizzle-kit": "^0.19.3",
    "typescript": "^5.1.6"
  }
